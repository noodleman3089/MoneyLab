FROM python:3.12-slim

# 1️⃣ ติดตั้ง dependencies ของระบบสำหรับ OpenCV
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 2️⃣ ตั้ง working directory
WORKDIR /app

# 3️⃣ คัดลอก requirements.txt
COPY requirements.txt .

# 4️⃣ ติดตั้ง dependencies ของ Python
RUN pip install --no-cache-dir -r requirements.txt

# ✅ ติดตั้งเสริม
RUN pip install --no-cache-dir \
    flask==3.0.0 \
    prometheus-client==0.19.0 \
    werkzeug==3.0.1 \
    opencv-python-headless \
    numpy \
    paddlepaddle \
    paddleocr \
    easyocr \
    pillow

# 5️⃣ คัดลอกโค้ดทั้งหมดa
COPY . .

# 6️⃣ เปิด port
EXPOSE 8000

# 7️⃣ Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# 8️⃣ รัน Flask app (ไม่ใช่ extract_receipt.py โดยตรง)
# ใช้ gunicorn เพื่อรัน Flask app ที่ชื่อ 'app' ในไฟล์ 'extract_receipt.py'
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "extract_receipt:app"]